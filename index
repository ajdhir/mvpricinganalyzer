<body>
    <div class="container">
        <div class="header">
            <h1>üöó Vehicle Price Analyzer</h1>
            <p>Find vehicles priced above MAP instantly</p>
        </div>
        
        <div class="upload-section">
            <div class="file-inputs">
                <div class="file-drop" id="bottomPriceDrop">
                    <h3>üìä Bottom Price File</h3>
                    <p>Drop your Excel file here or click to browse</p>
                    <p style="font-size: 0.8rem; color: #667eea;">VIN: Column E | Price: Column J</p>
                    <input type="file" id="bottomPriceFile" accept=".xlsx,.xls">
                    <div id="bottomFileName" style="margin-top: 10px; color: #48bb78; font-weight: 600;"></div>
                </div>
                
                <div class="file-drop" id="mapDetailsDrop">
                    <h3>üìã MAP Details File</h3>
                    <p>Drop your Excel file here or click to browse</p>
                    <p style="font-size: 0.8rem; color: #667eea;">VIN: Column G | MAP Price: Column I</p>
                    <input type="file" id="mapDetailsFile" accept=".xlsx,.xls">
                    <div id="mapFileName" style="margin-top: 10px; color: #48bb78; font-weight: 600;"></div>
                </div>
            </div>
            
            <button class="analyze-btn" id="analyzeBtn" disabled>Analyze Pricing</button>
        </div>
        
        <div class="results-section" id="results">
            <h2 style="margin-bottom: 20px;">Analysis Results</h2>
            <div class="stats">
                <div class="stat">
                    <div class="stat-value" id="totalVehicles">0</div>
                    <div class="stat-label">Total Vehicles</div>
                </div>
                <div class="stat">
                    <div class="stat-value" id="issuesFound">0</div>
                    <div class="stat-label">Above MAP</div>
                </div>
                <div class="stat">
                    <div class="stat-value" id="totalDiff">$0</div>
                    <div class="stat-label">Total Overage</div>
                </div>
            </div>
            
            <button class="export-btn" id="exportBtn">Export to Excel</button>
            
            <div id="tableContainer"></div>
        </div>
    </div>

    <script>
        let bottomPriceData = null;
        let mapDetailsData = null;
        let analysisResults = [];

        // Setup file drop zones
        function setupDropZone(dropId, inputId, displayId, dataStore) {
            const dropZone = document.getElementById(dropId);
            const fileInput = document.getElementById(inputId);
            const display = document.getElementById(displayId);
            
            dropZone.addEventListener('click', () => fileInput.click());
            
            dropZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropZone.style.borderColor = '#667eea';
            });
            
            dropZone.addEventListener('dragleave', () => {
                dropZone.style.borderColor = '#cbd5e0';
            });
            
            dropZone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropZone.style.borderColor = '#cbd5e0';
                if (e.dataTransfer.files.length > 0) {
                    handleFile(e.dataTransfer.files[0], dropZone, display, dataStore);
                }
            });
            
            fileInput.addEventListener('change', (e) => {
                if (e.target.files.length > 0) {
                    handleFile(e.target.files[0], dropZone, display, dataStore);
                }
            });
        }

        function handleFile(file, dropZone, display, dataStore) {
            const reader = new FileReader();
            
            reader.onload = function(e) {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                const sheetName = workbook.SheetNames[0];
                const worksheet = workbook.Sheets[sheetName];
                
                // Convert to array of arrays
                const jsonData = XLSX.utils.sheet_to_json(worksheet, { 
                    header: 1,
                    raw: false,  // Get formatted strings
                    defval: ''
                });
                
                console.log(`Loaded ${file.name}:`);
                console.log(`  Rows: ${jsonData.length}`);
                console.log(`  First data row:`, jsonData[1]);
                
                if (dataStore === 'bottom') {
                    bottomPriceData = jsonData;
                    // Show sample VIN and price
                    if (jsonData[1]) {
                        console.log(`  Sample VIN (Col E): ${jsonData[1][4]}`);
                        console.log(`  Sample Price (Col J): ${jsonData[1][9]}`);
                    }
                } else {
                    mapDetailsData = jsonData;
                    // Show sample VIN and MAP price
                    if (jsonData[1]) {
                        console.log(`  Sample VIN (Col G): ${jsonData[1][6]}`);
                        console.log(`  Sample MAP Price (Col I): ${jsonData[1][8]}`);
                    }
                }
                
                dropZone.classList.add('loaded');
                display.textContent = `‚úì ${file.name}`;
                
                // Enable analyze button if both files loaded
                if (bottomPriceData && mapDetailsData) {
                    document.getElementById('analyzeBtn').disabled = false;
                }
            };
            
            reader.readAsArrayBuffer(file);
        }

        function cleanPrice(value) {
            // Handle various price formats
            if (value == null || value === '') return 0;
            
            // If it's already a number, return it
            if (typeof value === 'number') return value;
            
            // Convert to string and clean
            let str = String(value);
            
            // Remove all non-numeric characters except decimal point and minus
            str = str.replace(/[^0-9.-]/g, '');
            
            // Parse to number
            const num = parseFloat(str);
            
            // Return 0 if parsing failed
            return isNaN(num) ? 0 : num;
        }

        function analyzeData() {
            console.log('\n=== STARTING ANALYSIS ===');
            
            // Build MAP price lookup
            const mapLookup = {};
            let mapCount = 0;
            
            for (let i = 1; i < mapDetailsData.length; i++) {
                const vin = String(mapDetailsData[i][6] || '').trim(); // Column G
                const rawPrice = mapDetailsData[i][8]; // Column I
                const price = cleanPrice(rawPrice);
                
                if (vin && vin.length > 10) {
                    mapLookup[vin] = price;
                    if (price > 0) mapCount++;
                    
                    // Debug first few
                    if (i <= 3) {
                        console.log(`MAP row ${i}: VIN=${vin}, Raw="${rawPrice}", Clean=${price}`);
                    }
                }
            }
            
            console.log(`Loaded ${Object.keys(mapLookup).length} VINs, ${mapCount} with prices > 0`);
            
            // Analyze ALL vehicles, not just those above MAP
            const results = [];
            let totalRows = 0;
            let matchedRows = 0;
            let aboveCount = 0;
            let belowCount = 0;
            let atMapCount = 0;
            
            for (let i = 1; i < bottomPriceData.length; i++) {
                totalRows++;
                
                const vin = String(bottomPriceData[i][4] || '').trim(); // Column E
                const rawCurrent = bottomPriceData[i][9]; // Column J
                const currentPrice = cleanPrice(rawCurrent);
                const store = bottomPriceData[i][0] || 'Unknown';
                
                if (!vin || vin.length < 10) continue;
                
                // Debug first few
                if (i <= 3) {
                    console.log(`Bottom row ${i}: VIN=${vin}, Raw="${rawCurrent}", Current=${currentPrice}`);
                }
                
                const mapPrice = mapLookup[vin];
                
                if (mapPrice !== undefined && mapPrice > 0 && currentPrice > 0) {
                    matchedRows++;
                    
                    const difference = currentPrice - mapPrice;
                    let status = '';
                    
                    if (currentPrice > mapPrice) {
                        status = 'ABOVE';
                        aboveCount++;
                    } else if (currentPrice < mapPrice) {
                        status = 'BELOW';
                        belowCount++;
                    } else {
                        status = 'AT MAP';
                        atMapCount++;
                    }
                    
                    results.push({
                        store: store,
                        vin: vin,
                        currentPrice: currentPrice,
                        mapPrice: mapPrice,
                        difference: difference,
                        status: status
                    });
                }
            }
            
            console.log(`\nAnalyzed ${totalRows} vehicles`);
            console.log(`Matched ${matchedRows} with MAP prices`);
            console.log(`Above MAP: ${aboveCount}, Below MAP: ${belowCount}, At MAP: ${atMapCount}`);
            
            // Sort by difference (highest first, so biggest overages show at top)
            results.sort((a, b) => b.difference - a.difference);
            
            // Store for export
            analysisResults = results;
            
            // Display results
            displayResults(results, aboveCount, belowCount, atMapCount);
        }

        function displayResults(results, aboveCount, belowCount, atMapCount) {
            document.getElementById('results').classList.add('show');
            
            // Update stats to show all categories
            document.getElementById('totalVehicles').textContent = results.length;
            document.getElementById('issuesFound').innerHTML = 
                `<span style="color: #e53e3e">${aboveCount} Above</span><br>` +
                `<span style="color: #48bb78">${belowCount} Below</span><br>` +
                `<span style="color: #718096">${atMapCount} At MAP</span>`;
            
            let totalOverage = 0;
            let totalSavings = 0;
            results.forEach(r => {
                if (r.difference > 0) totalOverage += r.difference;
                else if (r.difference < 0) totalSavings += Math.abs(r.difference);
            });
            
            document.getElementById('totalDiff').innerHTML = 
                `<span style="color: #e53e3e">+${totalOverage.toFixed(0)}</span><br>` +
                `<span style="color: #48bb78">-${totalSavings.toFixed(0)}</span>`;
            
            // Add filter buttons
            let html = '<div style="margin-bottom: 20px;">';
            html += '<button onclick="filterResults(\'all\')" style="margin-right: 10px; padding: 8px 16px; border: 1px solid #ccc; border-radius: 5px; background: #fff; cursor: pointer;">Show All (' + results.length + ')</button>';
            html += '<button onclick="filterResults(\'above\')" style="margin-right: 10px; padding: 8px 16px; border: 1px solid #e53e3e; border-radius: 5px; background: #fee; color: #e53e3e; cursor: pointer;">Above MAP (' + aboveCount + ')</button>';
            html += '<button onclick="filterResults(\'below\')" style="margin-right: 10px; padding: 8px 16px; border: 1px solid #48bb78; border-radius: 5px; background: #f0fff4; color: #48bb78; cursor: pointer;">Below MAP (' + belowCount + ')</button>';
            html += '<button onclick="filterResults(\'at\')" style="padding: 8px 16px; border: 1px solid #718096; border-radius: 5px; background: #f7fafc; color: #718096; cursor: pointer;">At MAP (' + atMapCount + ')</button>';
            html += '</div>';
            
            // Build table
            html += '<table><thead><tr>';
            html += '<th>Status</th><th>Store</th><th>VIN</th><th>Current Price</th><th>MAP Price</th><th>Difference</th>';
            html += '</tr></thead><tbody id="resultsTableBody">';
            
            if (results.length === 0) {
                html += '<tr><td colspan="6" style="text-align:center; padding: 40px;">';
                html += 'No vehicles found with MAP prices</td></tr>';
            } else {
                results.forEach(r => {
                    let statusColor = '';
                    let statusSymbol = '';
                    if (r.status === 'ABOVE') {
                        statusColor = '#e53e3e';
                        statusSymbol = '‚¨ÜÔ∏è';
                    } else if (r.status === 'BELOW') {
                        statusColor = '#48bb78';
                        statusSymbol = '‚¨áÔ∏è';
                    } else {
                        statusColor = '#718096';
                        statusSymbol = '‚úì';
                    }
                    
                    html += `<tr data-status="${r.status.toLowerCase()}">`;
                    html += `<td><span style="color: ${statusColor}">${statusSymbol} ${r.status}</span></td>`;
                    html += `<td>${r.store}</td>`;
                    html += `<td>${r.vin}</td>`;
                    html += `<td>${r.currentPrice.toFixed(0)}</td>`;
                    html += `<td>${r.mapPrice.toFixed(0)}</td>`;
                    
                    if (r.difference > 0) {
                        html += `<td style="color: #e53e3e; font-weight: 600;">+${r.difference.toFixed(0)}</td>`;
                    } else if (r.difference < 0) {
                        html += `<td style="color: #48bb78; font-weight: 600;">-${Math.abs(r.difference).toFixed(0)}</td>`;
                    } else {
                        html += `<td style="color: #718096;">$0</td>`;
                    }
                    
                    html += '</tr>';
                });
            }
            
            html += '</tbody></table>';
            document.getElementById('tableContainer').innerHTML = html;
        }
        
        // Add filter function
        window.filterResults = function(filter) {
            const rows = document.querySelectorAll('#resultsTableBody tr');
            rows.forEach(row => {
                if (filter === 'all') {
                    row.style.display = '';
                } else if (filter === 'above') {
                    row.style.display = row.dataset.status === 'above' ? '' : 'none';
                } else if (filter === 'below') {
                    row.style.display = row.dataset.status === 'below' ? '' : 'none';
                } else if (filter === 'at') {
                    row.style.display = row.dataset.status === 'at map' ? '' : 'none';
                }
            });
        }

        function exportResults() {
            if (analysisResults.length === 0) {
                alert('No results to export');
                return;
            }
            
            // Create new workbook
            const wb = XLSX.utils.book_new();
            
            // Convert results to array format
            const data = [['Store', 'VIN', 'Current Price', 'MAP Price', 'Overage']];
            analysisResults.forEach(r => {
                data.push([r.store, r.vin, r.currentPrice, r.mapPrice, r.difference]);
            });
            
            // Create worksheet
            const ws = XLSX.utils.aoa_to_sheet(data);
            XLSX.utils.book_append_sheet(wb, ws, 'Analysis Results');
            
            // Save file
            XLSX.writeFile(wb, `price_analysis_${new Date().toISOString().slice(0,10)}.xlsx`);
        }

        // Initialize
        setupDropZone('bottomPriceDrop', 'bottomPriceFile', 'bottomFileName', 'bottom');
        setupDropZone('mapDetailsDrop', 'mapDetailsFile', 'mapFileName', 'map');
        
        document.getElementById('analyzeBtn').addEventListener('click', analyzeData);
        document.getElementById('exportBtn').addEventListener('click', exportResults);
    </script>
</body>
</html>
